@model ContactUs
@{
    ViewData["Title"] = "Contact Us";
}
<div class="container">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <!--Form-->
    @Html.Partial("_StatusMessage", Model.StatusMessage)
    <form asp-controller="Home" asp-action="Contact" method="post" class="margin-bottom10">
        <div class="form-group">
            <label>Subject</label>
            <input asp-for="Subject" class="form-control" placeholder="Enter subject">
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Email address</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleSelect1">Type</label>
            <select asp-for="Type" class="form-control" id="exampleSelect1">
                <option value="0">General</option>
                <option value="1">Complain</option>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleTextarea">Body</label>
            <textarea asp-for="Body" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="fa-btn btn-1 btn-1e">Submit</button>
    </form>
</div>